@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                   Register
                </h1>
                <p class="text-white link-nav"><a asp-area="" asp-controller="Home" asp-action="Index">Home </a> <span class="lnr lnr-arrow-right"></span><a  asp-area="" asp-controller="Account" asp-action="Register" >Register</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->

<div class="row">
    <div class="col-4">
        <form class="form-area"  asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h1 class="mb-10" class="text-info">Create a new account.</h1>
            <hr />
            <div asp-validation-Summary="All" class="text-danger"></div>
            <div   class="col-lg-12 form-group">

                <input asp-for="FirstName" placeholder="Enter your name" onfocus="this.placeholder = ''" class="common-input mb-20 form-control" required="" type="text">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-lg-12 form-group">
                <input asp-for="LastName" placeholder="Enter your other names" onfocus="this.placeholder = ''" class="common-input mb-20 form-control" required="" type="text" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-lg-12 form-group">

                <input asp-for="PhoneNumber" placeholder="Enter your Phone Number" onfocus="this.placeholder = ''" class="common-input mb-20 form-control" required="" type="text" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-12 form-group">

                <input asp-for="Email" placeholder="Enter your Email Address" onfocus="this.placeholder = ''" class="common-input mb-20 form-control" required="" type="text" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-lg-12 form-group">

                <input asp-for="Password" placeholder="Enter your Password" onfocus="this.placeholder = ''" class="common-input mb-20 form-control" required="" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-lg-12 form-group">

                <input asp-for="ConfirmPassword" placeholder="Confirm Password" onfocus="this.placeholder = ''" class="common-input mb-20 form-control" required="" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <button type="submit" class="primary-btn mt-20 text-white" style="float: right;" value="Register">Register</button>

        </form>
    </div>
</div>


<hr />
<br />
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
