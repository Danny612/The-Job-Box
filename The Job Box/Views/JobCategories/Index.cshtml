@model IEnumerable<The_Job_Box.Models.JobCategory>

@{
    ViewData["Title"] = "Index";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Jobs Categories
                </h1>
                <p class="text-white link-nav">
                    <a asp-controller="Home" asp-action="Index" asp-area="">Home </a>
                    <span class="lnr lnr-arrow-right"></span>
                    <a asp-area="" asp-controller="JobCategories" asp-action="Index"> Job Categories</a>
                   
                </p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->

<h1>Index</h1>
<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i>  &nbsp; Edit
                    </a>
                    |
                    <a type="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                        <i class="far fa-list-alt"></i>  &nbsp; Details
                    </a>
                    |
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash-alt"></i> &nbsp; Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
